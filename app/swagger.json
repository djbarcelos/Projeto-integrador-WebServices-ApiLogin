{
  "openapi": "3.0.0",
  "info": {
    "title": "API de login e manipulação de usuario",
    "description": "Esse API tem como objetivo a manipulação dos procutos",
    "termsOfService": "http://localhost:3030/terms",
    "contact": {
      "email": "diogobarcelos@gmail.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3030/",
      "description": "API de test"
    }
  ],
  "paths": {
    "/register": {
      "post": {
        "summary": "Cadastro de usuario",
        "description": "Rota responsavel por cadastrar um novo usuario",
        "tags": ["Login"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Users"
              },
              "examples": {
                "user": {
                  "value": {
                    "name": "Gabriel Silva",
                    "birthDate": "01/01/1994",
                    "cpf": "123.111.320-11",
                    "email": "gabrieSilva@gmal.com",
                    "password": "123456",
                    "phone": "(31)912345678"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Internal Error - register user && Email already exists && CPF already registered && Registration fail",
            "links": {}
          },
          "201": {
            "description": "success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Users"
                }
              }
            }
          }
        }
      }
    },
    "/authenticate": {
      "post": {
        "summary": "Authenticação de login",
        "description": "Rota responsavel por autheticar o usuaria que vai logar no sistema",
        "tags": ["Login"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Users"
              },
              "examples": {
                "user": {
                  "value": {
                    "cpf": "123.111.320-11",
                    "password": "123456"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Internal Error - authenticate user",
            "links": {}
          },
          "404": {
            "description": "User not found && Invalid password",
            "links": {}
          },
          "200": {
            "description": "success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "number"
                    },
                    "message": {
                      "type": "string"
                    },
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/forgot_password": {
      "post": {
        "summary": "Pedido para troca de senha",
        "description": "Rota responsavel por enviar um email para troca de senha",
        "tags": ["Login"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Users"
              },
              "examples": {
                "user": {
                  "value": {
                    "email": "djbarcelos@gmail.com"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Internal Error - forgot password",
            "links": {}
          },
          "404": {
            "description": "User not found",
            "links": {}
          },
          "200": {
            "description": "success"
          }
        }
      }
    },
    "/reset_password": {
      "post": {
        "summary": "Responsavel por faser a troca da senha",
        "description": "Rota responsavel por validar o token da troca de senha é registrar a nova senha",
        "tags": ["Login"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Users"
              },
              "examples": {
                "user": {
                  "value": {
                    "email": "djbarcelos@gmail.com",
                    "token": "330a638ea7c3d6194ffe3c37d1224695c31b4c44",
                    "password": "1234"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Internal Error - reset password",
            "links": {}
          },
          "404": {
            "description": "User not found && Token invalid && Token expired",
            "links": {}
          },
          "200": {
            "description": "success"
          }
        }
      }
    },
    "/auth": {
      "post": {
        "summary": "Validar o token do usuario que ainda esta na sessão",
        "description": "Rota responsavel por validar o token do usuario que ainda esta na sessão",
        "tags": ["Login"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "400": {
            "description": "Internal Error - problems connecting to the session && problems connecting to the session",
            "links": {}
          },
          "200": {
            "description": "success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "connection": {
                      "type": "boolean"
                    },
                    "user": {
                      "type": "object",
                      "$ref": "#/components/schemas/Users"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users": {
      "get": {
        "summary": "Busca todos os usuarios",
        "description": "Rota responsavel por buscar todos os usuario",
        "tags": ["Users"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Users"
                }
              }
            }
          }
        }
      }
    },
    "/mycalls": {
      "get": {
        "summary": "Busca todos os agendamentos do usuario",
        "description": "Rota responsavel por buscar todos os agendamentos do usuario",
        "tags": ["Users"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "400": {
            "description": "Internal Error - register my calls && Problems finding user"
          },
          "200": {
            "description": "success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "number"
                    },
                    "message": {
                      "type": "string"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "$ref": "#/components/schemas/myCalls"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/register_mycalls": {
      "put": {
        "summary": "Registra um novo agendamento",
        "description": "Rota responsavel por registrar um novo agendamento",
        "tags": ["Users"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/myCalls"
              },
              "examples": {
                "user": {
                  "value": {
                    "specialty": ["medico", "ortopedia"],
                    "date": "2021-10-22T16:35:33.802+00:00",
                    "schedule": "09:00"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Internal Error - register my calls && Problems finding user"
          },
          "200": {
            "description": "success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "number"
                    },
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/mark_off": {
      "put": {
        "summary": "Cancela um agendameto",
        "description": "Rota responsavel por cancelar agendamento do usuario",
        "tags": ["Users"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/myCalls"
              },
              "examples": {
                "user": {
                  "value": {
                    "queryId": "colocque um id valido"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Internal Error - register my calls && Problems finding user"
          },
          "200": {
            "description": "success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "number"
                    },
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Users": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "birthDate": {
            "type": "string"
          },
          "cpf": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "phone": {
            "type": "string"
          },
          "_id": {
            "type": "string"
          },
          "myCalls": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "specialty": {
                  "type": "string"
                },
                "date": {
                  "type": "string"
                },
                "schedule": {
                  "type": "string"
                },
                "states": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "state": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "myCalls": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "_id": {
              "type": "string"
            },
            "specialty": {
              "type": "string"
            },
            "date": {
              "type": "string"
            },
            "schedule": {
              "type": "string"
            },
            "states": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "state": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
